{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clipcrab",
  "version": "0.2.1",
  "identifier": "ClipCrab",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ClipCrab",
        "width": 800,
        "height": 600,
        "label": "main"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "ClipCrab",
    "copyright": "Copyright Â© 2024 ClipCrab",
    "category": "Utility",
    "shortDescription": "Clipboard Manager",
    "longDescription": "A secure clipboard manager with encryption and system tray support."
  }
}
